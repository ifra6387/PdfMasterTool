<script src="/static/js/file-upload.js"></script>
<script>
// Initialize hero dropzone
$(document).ready(function() {
    initializeHeroDropzone();
});

function initializeHeroDropzone() {
    const dropzone = $('#hero-dropzone');
    const fileInput = $('#hero-file-input');
    const fileList = $('#hero-file-list');
    
    // Drag and drop events
    dropzone.on('dragover dragenter', function(e) {
        e.preventDefault();
        e.stopPropagation();
        $(this).addClass('dragover');
    });
    
    dropzone.on('dragleave dragend drop', function(e) {
        e.preventDefault();
        e.stopPropagation();
        $(this).removeClass('dragover');
    });
    
    dropzone.on('drop', function(e) {
        const files = e.originalEvent.dataTransfer.files;
        handleHeroFiles(files);
    });
    
    // Click to upload
    dropzone.on('click', function() {
        fileInput.click();
    });
    
    fileInput.on('change', function() {
        handleHeroFiles(this.files);
    });
}

function handleHeroFiles(files) {
    const fileList = $('#hero-file-list');
    fileList.empty();
    
    if (files.length > 0) {
        const fileArray = Array.from(files);
        
        // Show file list
        fileArray.forEach((file, index) => {
            const fileItem = $(`
                <div class="d-flex justify-content-between align-items-center py-2 border-bottom">
                    <div>
                        <i class="fas fa-file-pdf text-danger me-2"></i>
                        <span class="fw-medium">${file.name}</span>
                        <small class="text-muted ms-2">(${formatFileSize(file.size)})</small>
                    </div>
                    <button type="button" class="btn btn-sm btn-outline-danger" onclick="removeHeroFile(${index})">
                        <i class="fas fa-times"></i>
                    </button>
                </div>
            `);
            fileList.append(fileItem);
        });
        
        // Show action buttons
        const actionButtons = $(`
            <div class="mt-3 d-flex gap-2">
                <button type="button" class="btn btn-success" onclick="suggestTool()">
                    <i class="fas fa-magic me-2"></i>Suggest Tool
                </button>
                <button type="button" class="btn btn-primary" onclick="showAllTools()">
                    <i class="fas fa-tools me-2"></i>View All Tools
                </button>
            </div>
        `);
        fileList.append(actionButtons);
    }
}

function removeHeroFile(index) {
    // Implementation for removing files from the list
    console.log('Remove file at index:', index);
}

function suggestTool() {
    // Simple tool suggestion based on file count
    const fileCount = $('#hero-file-list .border-bottom').length;
    
    if (fileCount >= 2) {
        window.location.href = "/tools/merge";
    } else {
        // Show modal with tool options
        showToolSuggestionModal();
    }
}

function showAllTools() {
    $('html, body').animate({
        scrollTop: $('.tool-card').first().offset().top - 100
    }, 500);
}

function showToolSuggestionModal() {
    // Create and show modal with tool suggestions
    const modal = $(`
        <div class="modal fade" id="toolSuggestionModal" tabindex="-1">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title">What would you like to do?</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                    </div>
                    <div class="modal-body">
                        <div class="d-grid gap-3">
                            <a href="/tools/split" class="btn btn-outline-success btn-lg">
                                <i class="fas fa-scissors me-2"></i>Split PDF
                            </a>
                            <a href="/tools/compress" class="btn btn-outline-warning btn-lg">
                                <i class="fas fa-compress-arrows-alt me-2"></i>Compress PDF
                            </a>
                            <a href="/tools/edit" class="btn btn-outline-secondary btn-lg">
                                <i class="fas fa-edit me-2"></i>Edit PDF
                            </a>
                            <a href="/tools/convert" class="btn btn-outline-info btn-lg">
                                <i class="fas fa-exchange-alt me-2"></i>Convert Files
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    `);
    
    $('body').append(modal);
    const bootstrapModal = new bootstrap.Modal(modal[0]);
    bootstrapModal.show();
    
    modal.on('hidden.bs.modal', function() {
        modal.remove();
    });
}
</script>

</body>
</html>